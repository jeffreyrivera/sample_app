<div class="profile" summary="profile information" style="width: 880px; position: relative;">
	
		<div class="main round" style="float: left; 
									   min-height: 800px;
									   padding: 10px;
									   background-color: #FFC;
									   width: 480px;">
			<div  class="heading" style="border-bottom: 1px solid #EBEBEB; padding: 10px;">
			<h1>
				<%= gravatar_for @user%>
				<%= @user.name %></br>
			</h1>
			</div>
			<% unless @user.microposts.empty? %>
				<div class="microposts_stream" summary="User microposts" 
				style="position: relative; 
					   min-height: 80px;
					   width: 480px;
					   position: relative;">
					<%= render @microposts %>
				</div>	
				<%= will_paginate @microposts %>
			<% end %>
		</div>
		<div class="sidebar round"
			style=" float: right; text-align: left; position: relative;
			background-color: #FFC;	
			margin-left: 20px;		
			padding: 10px;
			width: 340px;">
			<strong>Name</strong> <%= @user.name %><br />
			<strong>URL</strong> <%= link_to user_path(@user), @user %><br />
			<strong>Microposts</strong> <%= @user.microposts.count %>
		</div>
		<div style=" clear: both;"></div>
	
</div>



