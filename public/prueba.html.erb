
micropost with nice html

<div class="micropost_items" 
	style="
	position: relative;
	border-bottom: 1px solid #EBEBEB;
	
	display: block;
	outline: none;
	margin-top: -1px;
	border-top: 1px solid transparent;">
	
	<div class="micropost_content" 
		style="padding: 10px 20px;
		font-size: 15px;
		min-height: 80px;
		position: relative;">
		
		<div class="micropost_item" 
			style="float: left;	position: relative; ">
			<span class="content" style="float: left;"><%= micropost.content %></span>
			<div class="timestamp" style="clear:both; color: gray;">
				Posted <%= time_ago_in_words(micropost.created_at) %> ago
			</div>
		</div>
	
	
		<% user = micropost.user rescue User.find(micropost.user_id) %>
		<% if current_user?( user ) %>
		<div class="micropost_delete_link"
			style="float: right; clear: both; position: relative; width: 50px;">
			<%= link_to "delete", micropost, :method => :delete, :confirm => "You sure?", :title => micropost.content %>
		</div>
		<% end %>
	</div>
	
</div>



